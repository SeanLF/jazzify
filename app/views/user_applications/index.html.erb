<h1>Volunteer Applications</h1>
<% if @user_applications.nil? or @count == 0 %>

  <h3>No one has applied yet. <i class="fa fa-frown-o">&nbsp;</i></h3>

<% else %>

  <%= link_to "Download", reports_export_user_applications_path, class: "btn btn-default" %>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>First choice</th>
          <th>Second choice</th>
          <th>Third choice</th>
          <th>Status</th>
          <th>Last Updated</th>
          <th></th>
        </tr>
      </thead>

      <tbody>

        <%= content_tag_for(:tr, @user_applications) do |user_application| %>
          <td><%= user_application.first_name + " " +user_application.last_name %></td>
          <td><%= user_application.c1 %></td>
          <td><%= user_application.c2 %></td>
          <td><%= user_application.c3 %></td>
          <td><%= user_application.status %></td>
          <td><%= user_application.updated_at %></td>
          <td><%= link_to 'Review', "/user_applications/#{user_application.id}/view" %></td>

        <% end %>

      </tbody>
    </table>
  </div>
  <%= will_paginate @user_applications, renderer: BootstrapPagination::Rails %>

<% end %>
