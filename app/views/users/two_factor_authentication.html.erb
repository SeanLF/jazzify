<h1>Two Factor Authentication</h1>
<% if current_user.otp_required_for_login %>
  <%= link_to "Turn off", users_turn_off_two_factor_authentication_path, :class => 'btn btn-danger' %>
<% else %>
  <%= link_to "Enable", users_turn_on_two_factor_authentication_path, :class => 'btn btn-success' %>
<% end %>

<style type="text/css">
 table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
 }
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>
<% if !@qr.nil? %>

<table>
<% @qr.modules.each_index do |x| %>
  <tr>
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>
<% end %>
