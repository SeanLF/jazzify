<div class="row">
  <div class="col-md-3">
    <fieldset>
      <legend>Last login</legend>
      <ul class="list-unstyled">
        <% @counts.each_with_index do |(key, value), index| %>
          <li>
            <span style="background-color: <%= @colors[index] %>; width: 10px; border: 1px solid <%= @colors[index] %>">
              &nbsp;&nbsp;&nbsp;
            </span>
            &nbsp;
            <%= key %>
            <span class="text-right pull-right">
              <%= value %>
            </span>
          </li>
        <% end %>
      </ul>
      <hr/>
    </fieldset>
  </div>
  <div class="col-md-9">
    <canvas id="canvas"></canvas>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    var doughnutData = [
      <% @counts.each_with_index do |(key, value), index| %>
        {
          value: <%= value %>,
          color: "<%= @colors[index] %>",
          highlight: "<%= @colors[index] %>",
          label: "<%= key %>"
        }
        <% if index < @counts.count %>
          ,
        <% end %>
      <% end %>
      ];
      var ctx = document.getElementById("canvas").getContext("2d");
      window.myDoughnut = new Chart(ctx).Pie(doughnutData, {responsive : true});
  });
</script>
