<!-- Modal -->
<div class="modal fade" id="export_user_applications_for_position" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Export applications for position</h4>
      </div>
      <%= form_tag(reports_export_user_applications_path) do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <label>I want all applications that have:</label>
          <br/>
          <%= collection_select(:volunteer_position, :id, VolunteerPosition.positions_applied_for.order(:name), :id, :name) %>
        </div>

        <div class="form-group">
          <label>as the:</label>
          <ul class="list-unstyled">
          <li><label><input type="radio" checked id="first_choice" name="choice" value="first">&nbsp;first choice</label></li>
          <li><label><input type="radio" id="second_choice" name="choice" value="second">&nbsp;second choice</label></li>
          <li><label><input type="radio" id="third_choice" name="choice" value="third">&nbsp;third choice</label></li>
          </ul>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= submit_tag("Export Applications", class: 'btn btn-primary') %>
      </div>
      <% end %>
    </div>
  </div>
</div>
