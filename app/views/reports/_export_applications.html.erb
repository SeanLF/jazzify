<!-- Modal -->
<div class="modal fade" id="export_user_applications_for_position" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Export applications for position</h4>
      </div>
      <%= form_tag(reports_export_user_applications_path) do |f| %>
        <div class="modal-body">

          <label>Select a Position:</label>
          <br/>
          <%= collection_select(:volunteer_position, :id, VolunteerPosition.positions_applied_for.order(:title), :id, :title) %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag("Export Applications", class: 'btn btn-primary') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
