<div class="row">
  <div class="col-md-2">
    <fieldset>
      <legend>Legend</legend>
      <ul style="padding-left: 0px; list-style-type: none">
        <li>
          <span style="background-color: #F7464A; border: 1px solid #FF5A5E">&nbsp;&nbsp;&nbsp;&nbsp;</span> Have registered
        </li>
        <li>
          <span style="background-color: #46BFBD; border: 1px solid #5AD3D1">&nbsp;&nbsp;&nbsp;&nbsp;</span> Have information
        </li>
        <li>
          <span style="background-color: #FDB45C; border: 1px solid #FFC870">&nbsp;&nbsp;&nbsp;&nbsp;</span> Have applied
        </li>
      </ul>
      <hr/>
    </fieldset>
  </div>
  <div class="col-md-10">
    <canvas id="canvas"></canvas>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    var barChartData = {
      labels : ["Registered","Information","Applied"],
      datasets : [
        {
          fillColor : "#F7464A",
          data : <%= [@users, @infos, @apps] %>
        }
      ]
    }
    var ctx = document.getElementById("canvas").getContext("2d");
    window.myBar = new Chart(ctx).Bar(barChartData, {
      responsive : true
    });
    myBar.datasets[0].bars[1].fillColor = "#46BFBD";
    myBar.datasets[0].bars[1].highlightFill = "#5AD3D1";
    myBar.datasets[0].bars[2].fillColor = "#FDB45C";
    myBar.datasets[0].bars[2].highlightFill = "#FFC870";
  });
</script>
